                                    <a class="btnblack btngreay" href="@Url.Action("UserCreate", "RegisteredUser")">Reset</a>
                                    <a class="btnblack btngreay1" href="@Url.Action("Index", "RegisteredUser")">Cancel</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


