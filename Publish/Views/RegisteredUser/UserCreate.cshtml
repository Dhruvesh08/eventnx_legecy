@model LinkedInDemo.Models.RegisteredUserModel

@{
    ViewBag.Title = "UserCreate";
}

@using (Html.BeginForm("UserCreate", "RegisteredUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
