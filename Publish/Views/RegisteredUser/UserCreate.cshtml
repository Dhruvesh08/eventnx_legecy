    @Html.AntiForgeryToken()

    <div class="mainBlock minheight500">
        <div class="mainBlockTop">
            <div><a id="addtotable1" href="@Url.Action("Index", "RegisteredUser")" style="color:#33353f"><i class="fa fa-chevron-left"></i>&nbsp;Back</a></div>
