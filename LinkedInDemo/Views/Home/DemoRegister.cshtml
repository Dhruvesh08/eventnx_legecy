    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('#txtFirstName').val($('#hidFirstName').val());
                $('#txtLastName').val($('#hidLastName').val());
                $('#txtEmail').val($('#hidEmail').val());
                $('#profileimagelinked').attr("src", $('#hidProfileImage').val());
            }, 10000)

            $('.eventformsubmit').click(function () {
                var script = document.createElement("script");
                script.src = "https://www.eventnx.com/eventscript/submitdatatoeventpro.js";
                script.setAttribute("id", "submitdatatoeventpro");
                script.setAttribute("data-eventprouserid", $('#hidEventProUserId').val());
                script.setAttribute("data-firstname", $('#hidFirstName').val());
                script.setAttribute("data-lastname", $('#hidLastName').val());
                script.setAttribute("data-emailid", $('#hidEmail').val());
                script.setAttribute("data-companyname", $('#txtCompanyName').val());
                script.setAttribute("data-jobtitle", $('#txtJobTitle').val());
                script.setAttribute("data-crmregid", 123);
                document.head.appendChild(script);
                $('#RegisterForm').hide();
            });
        });
    </script>



