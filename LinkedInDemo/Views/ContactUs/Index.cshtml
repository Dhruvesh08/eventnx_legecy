    <script>
        function validate() {
            var isvalid = true;
            var Name = $("#Name").val();
            var Company = $("#Company").val();
            var Designation = $("#Designation").val();
            var Phone = $("#Phone").val();
            var Email = $("#Email").val();
            if (Name == "" || Name == null) {
                $("#spanName").show();
                isvalid = false;
            }
            if (Company == "" || Company == null) {
                $("#spanCompany").show();
                isvalid = false;
            }
            if (Designation == "" || Designation == null) {
                $("#spanDesignation").show();
                isvalid = false;
            }
            if (Phone == "" || Phone == null) {
                isvalid = false;
                $("#spanPhone").show();
            }
            if (Email == "" || Email == null) {
                $("#spanEmail").show();
                isvalid = false;
            }
            return isvalid;
        }

        function Contactus() {
            var Name = $("#Name").val();
            var Company = $("#Company").val();
            var Designation = $("#Designation").val();
            var Phone = $("#Phone").val();
            var Message = $("#Message").val();
            var Email = $("#Email").val();
            if (validate()) {
                $.ajax({
                    method: "POST",
                    url: '/ContactUs/Index',
                    data: {
                        Name: Name,
                        Company: Company,
                        Designation: Designation,
                        Phone: Phone,
                        Message: Message,
                        Email: Email
                    },
                    success: function (response) {
                        $('#myModal').modal('show');
                        $("#Name").val("");
                        $("#Company").val("");
                        $("#Designation").val("");
                        $("#Phone").val("");
                        $("#Message").val("");
                        $("#Email").val("");
                        $("#spanName").hide();
                        $("#spanCompany").hide();
                        $("#spanDesignation").hide();
                        $("#spanPhone").hide();
                        $("#spanEmail").hide();
                        @* alert("Thankyou!");
                        window.location.href = '@Url.Content("~/Home/Index")';*@
                    }
                });
            }
        }
    </script>
